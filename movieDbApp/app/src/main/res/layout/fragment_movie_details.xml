<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ui.main.MovieDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgViewMovieDetailsBackdrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="330dp"
                android:background="@color/mainBackgroundDarker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCardPoster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_min="326dp"
                android:layout_marginStart="82dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="82dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="@+id/imgViewMovieDetailsBackdrop"
                app:layout_constraintStart_toStartOf="@+id/imgViewMovieDetailsBackdrop"
                app:layout_constraintTop_toTopOf="@+id/imgViewMovieDetailsBackdrop">

                <ImageView
                    android:id="@+id/imgViewMovieDetailsCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtViewMovieDetailsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:text="Movie title"
                android:textAlignment="textStart"
                android:textColor="@color/headerTexts"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageCardPoster" />

            <TextView
                android:id="@+id/txtViewMovieDetailsGenres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:text="Action, Thriller, Wherever ;) "
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsTitle" />

            <TextView
                android:id="@+id/txtViewMovieDetailsUserRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:text="User Rating: 85% Liked"
                android:textAlignment="textStart"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsGenres" />

            <TextView
                android:id="@+id/txtViewMovieDetailsPopularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:text="User Rating: 85% Liked"
                android:textAlignment="textStart"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsUserRating" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="12dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/linhaDivisoria"
                android:foregroundTint="@color/linhaDivisoria"
                app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsPopularity"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/txtMovieDetailsSinopse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="12dp"
                android:text="Sinopse"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="536dp" />

            <TextView
                android:id="@+id/txtMovieDetailsSinopseDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:text="@string/movie_fake_sinopse"
                android:textColor="@color/secondaryText"
                app:layout_constraintTop_toBottomOf="@id/txtMovieDetailsSinopse"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/btnMoviesDetailsFavorite"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Favorite"
                android:textColor="@color/white"
                app:icon="@drawable/ic_baseline_favorite_24_off"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMovieDetailsSinopseDesc"
                app:strokeColor="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <!--    app:strokeColor="@color/FavoritosCor"-->
    <!--    android:textColor="@color/FavoritosCor"-->
    <!--    app:iconTint="@color/FavoritosCor"-->


</androidx.constraintlayout.widget.ConstraintLayout>