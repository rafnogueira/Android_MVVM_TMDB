<!--    Se der tempo colocar mais listas, de imagens, atores etc a-->

    <ImageView
        android:id="@+id/imgViewMovieDetailsBackdrop"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/imgViewMovieDetailsCover"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewMovieDetailsBackdrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewMovieDetailsBackdrop"
        android:layout_marginLeft="10dp"
        >

    </ImageView>

    <TextView
        android:id="@+id/txtViewMovieDetailsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Movie title"
        android:maxLines="3"
        android:textSize="26sp"
        android:layout_marginHorizontal="8dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imgViewMovieDetailsBackdrop"
        app:layout_constraintStart_toEndOf="@+id/imgViewMovieDetailsCover"
        app:layout_constraintTop_toTopOf="@+id/imgViewMovieDetailsCover" />

    <TextView
        android:id="@+id/txtViewMovieDetailsBackdropDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Action, Thriller, Wherever ;) "
        app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsTitle"
        app:layout_constraintStart_toEndOf="@id/imgViewMovieDetailsCover"
        app:layout_constraintEnd_toEndOf="@id/imgViewMovieDetailsBackdrop"
        />

    <TextView
        android:id="@+id/txtViewMovieDetailsUserRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="User Rating: 85% Liked"
        app:layout_constraintTop_toBottomOf="@id/txtViewMovieDetailsBackdropDetails"
        app:layout_constraintStart_toEndOf="@id/imgViewMovieDetailsCover"
        app:layout_constraintEnd_toEndOf="@id/imgViewMovieDetailsBackdrop"
        />

    <TextView
        android:id="@+id/txtMovieDetailsSinopse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sinopse"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgViewMovieDetailsBackdrop"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:justificationMode="inter_word"
        android:text="@string/movie_fake_sinopse"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtMovieDetailsSinopse"
        />

    <Button
        android:id="@+id/btnMoviesDetailsFavorite"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Favoritos"
        app:icon="@drawable/ic_baseline_favorite_24_off"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewMovieDetailsCover"
        app:layout_constraintStart_toEndOf="@+id/imgViewMovieDetailsCover"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMovieDetailsUserRating"
        app:strokeColor="@color/white"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        />
<!--    app:strokeColor="@color/FavoritosCor"-->
<!--    android:textColor="@color/FavoritosCor"-->
<!--    app:iconTint="@color/FavoritosCor"-->


</androidx.constraintlayout.widget.ConstraintLayout>